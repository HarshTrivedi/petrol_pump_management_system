<h1>Listing tanks</h1>

<table>
  <thead>
    <tr>
      <th>Capacity</th>
      <th>Fuel type</th>
      <th>Petrol pump station</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tanks.each do |tank| %>
      <tr>
        <td><%= tank.capacity %></td>
        <td><%= tank.fuel_type %></td>
        <td><%= tank.petrol_pump_station %></td>
        <td><%= link_to 'Show', tank %></td>
        <td><%= link_to 'Edit', edit_tank_path(tank) %></td>
        <td><%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tank', new_tank_path %>

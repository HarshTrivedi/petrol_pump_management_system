<%- model_class = Tank -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tank %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:capacity) %></dt>
      <dd><pre class="prettyprint"><%= @tank.capacity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fuel_type) %></dt>
      <dd><pre class="prettyprint"><%= @tank.fuel_type %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tanks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tank_path(@tank), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tank_path(@tank),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


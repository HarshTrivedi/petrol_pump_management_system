<%- model_class = NonFuelTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => NonFuelTransaction %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @non_fuel_transactions.each do |non_fuel_transaction| %>
      <tr>
        <td><%= non_fuel_transaction.id %></td>
        <td><%=l non_fuel_transaction.created_at, format: :long %></td>
        <td>
          <%= link_to non_fuel_transaction_path(non_fuel_transaction), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to non_fuel_transaction_path(non_fuel_transaction), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_non_fuel_transaction_path,
            :class => 'btn btn-primary' %>

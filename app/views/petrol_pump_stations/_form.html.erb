<%= simple_form_for(@petrol_pump_station) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :street_address %>
    <%= f.input :pincode %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%- model_class = PetrolPumpStation -%>
<div class="page-header">
  <h1><%=t '.title', :default => PetrolPumpStation %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @petrol_pump_station.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @petrol_pump_station.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @petrol_pump_station.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:street_address) %></dt>
      <dd><pre class="prettyprint"><%= @petrol_pump_station.street_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pincode) %></dt>
      <dd><pre class="prettyprint"><%= @petrol_pump_station.pincode %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              petrol_pump_stations_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_petrol_pump_station_path(@petrol_pump_station), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              petrol_pump_station_path(@petrol_pump_station),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


<h1>Listing petrol_pump_stations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Street address</th>
      <th>Pincode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @petrol_pump_stations.each do |petrol_pump_station| %>
      <tr>
        <td><%= petrol_pump_station.name %></td>
        <td><%= petrol_pump_station.city %></td>
        <td><%= petrol_pump_station.state %></td>
        <td><%= petrol_pump_station.street_address %></td>
        <td><%= petrol_pump_station.pincode %></td>
        <td><%= link_to 'Show', petrol_pump_station %></td>
        <td><%= link_to 'Edit', edit_petrol_pump_station_path(petrol_pump_station) %></td>
        <td><%= link_to 'Destroy', petrol_pump_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


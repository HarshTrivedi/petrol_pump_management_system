<%- model_class = PetrolPumpStation -%>
<div class="page-header">
  <h1><%=t '.title', :default => PetrolPumpStation %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:street_address) %></th>
      <th><%= model_class.human_attribute_name(:pincode) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @petrol_pump_stations.each do |petrol_pump_station| %>
      <tr>
        <td><%= petrol_pump_station.id %></td>
        <td><%= petrol_pump_station.name %></td>
        <td><%= petrol_pump_station.city %></td>
        <td><%= petrol_pump_station.state %></td>
        <td><%= petrol_pump_station.street_address %></td>
        <td><%= petrol_pump_station.pincode %></td>
        <td><%=l petrol_pump_station.created_at, format: :long %></td>
        <td>
          <%= link_to petrol_pump_station_path(petrol_pump_station), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to petrol_pump_station_path(petrol_pump_station), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_petrol_pump_station_path,
            :class => 'btn btn-primary' %>

<%- model_class = FuelStock -%>
<div class="page-header">
  <h1><%=t '.title', :default => FuelStock %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date) %></dt>
      <dd><pre class="prettyprint"><%= @fuel_stock.date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:opening_quantity) %></dt>
      <dd><pre class="prettyprint"><%= @fuel_stock.opening_quantity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:closing_quantity) %></dt>
      <dd><pre class="prettyprint"><%= @fuel_stock.closing_quantity %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fuel_stocks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fuel_stock_path(@fuel_stock), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fuel_stock_path(@fuel_stock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


<%= form_for @fuel_stock, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :opening_quantity, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :opening_quantity, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :closing_quantity, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :closing_quantity, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  fuel_stocks_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

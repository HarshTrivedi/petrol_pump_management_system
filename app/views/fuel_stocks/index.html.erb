<h1>Listing fuel_stocks</h1>

<table>
  <thead>
    <tr>
      <th>Tank</th>
      <th>Date</th>
      <th>Opening quantity</th>
      <th>Closing quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fuel_stocks.each do |fuel_stock| %>
      <tr>
        <td><%= fuel_stock.tank %></td>
        <td><%= fuel_stock.date %></td>
        <td><%= fuel_stock.opening_quantity %></td>
        <td><%= fuel_stock.closing_quantity %></td>
        <td><%= link_to 'Show', fuel_stock %></td>
        <td><%= link_to 'Edit', edit_fuel_stock_path(fuel_stock) %></td>
        <td><%= link_to 'Destroy', fuel_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


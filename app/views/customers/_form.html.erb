<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :petrol_pump_station %>
    <%= f.input :name %>
    <%= f.input :residence_number %>
    <%= f.input :mobile_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

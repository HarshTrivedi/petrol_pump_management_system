<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :petrol_pump_station %>
    <%= f.input :name %>
    <%= f.input :joining_date %>
    <%= f.input :position %>
    <%= f.input :salary %>
    <%= f.association :attendance %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

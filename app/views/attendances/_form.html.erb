<%= simple_form_for(@attendance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :overtime_hours %>
    <%= f.input :present %>
    <%= f.association :employee %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
